all: exec
main.o: main.c game.h display.h player.h card.h utils.h save.h
    gcc -c main.c -o main.o
card.o: card.c card.h game.h display.h utils.h
    gcc -c card.c -o card.o
display.o: display.c display.h game.h
    gcc -c display.c -o diplay.o
game.o: game.c game.h card.h player.h display.h utils.h save.h
    gcc -c game.c -o game.o
player.o: player.c player.h game.h card.h display.h utils.h
    gcc -c player.c -o player.o
save.o: save.c save.h game.h display.h utils.h
    gcc -c save.c -o save.o
utils.o: utils.c utils.h display.h
    gcc -c utils.c -o utils.o

exec: main.o card.o display.o game.o player.o save.o utils.o
    gcc main.o card.o display.o game.o player.o save.o utils.o -o exec 

clean:
    rm main.o card.o display.o game.o player.o save.o utils.o
    rm exec

cleanfile:
    rm -f $(FILE)
	touch $(FILE)
